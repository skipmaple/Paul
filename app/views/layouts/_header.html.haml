%header.leading-normal.tracking-normal
  %nav.p-2.mt-0.fixed.w-full.z-10.top-0{:class => "bg-light-400 dark:bg-dark-transparent-200"}
    .container.mx-auto.flex.flex-wrap.items-center
      .flex.w-full.justify-center{ :class => "md:w-1/2 md:justify-start" }
        %a.no-underline{ :class => "hover:text-white hover:no-underline", :href => root_path }
          %h3.text-dark-400.pl-2
            =t(:base_title)
      .flex.w-full.pt-2.content-center.justify-between{ :class => "md:w-1/2 md:justify-end" }
        %ul{ :class => "list-reset flex justify-between flex-1 md:flex-none items-center" }
          %li.mr-3
            %a{ :class=>"inline-block body-medium-bold text-dark-300 no-underline hover:text-dark-400 hover:underline py-2 px-4", :href => root_path }
              =t(:home)
          %li.mr-3
            %a{ :class=>"inline-block body-medium-bold text-dark-300 no-underline hover:text-dark-400 hover:underline py-2 px-4", :href => about_path }
              =t(:about)
          - if logged_in?
            %li.mr-3
              %a{ :class=>"inline-block body-medium-bold text-dark-300 no-underline hover:text-dark-400 hover:underline py-2 px-4", :href => users_path }
                = t(:users)
            %li.mr-3
              %button#dropdownNavbarLink.flex.justify-between.items-center.py-2.px-4.w-full.body-medium-bold.text-dark-300.border-b.border-gray-100.hover:underline.hover:text-dark-400.md:hover:bg-transparent.md:border-0.md:hover:text-blue-700.md:p-0.md:w-auto.dark:text-gray-400.dark:hover:text-white.dark:focus:text-white.dark:border-gray-700.dark:hover:bg-gray-700.md:dark:hover:bg-transparent{"data-dropdown-toggle" => "dropdownNavbar"}
                #{t(:account)}
                %svg.ml-1.w-4.h-4{:fill => "currentColor", :viewbox => "0 0 20 20", :xmlns => "http://www.w3.org/2000/svg"}
                  %path{"clip-rule" => "evenodd", :d => "M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z", "fill-rule" => "evenodd"}
              #dropdownNavbar.hidden.z-10.w-44.bg-white.rounded.divide-y.divide-gray-100.shadow.dark:bg-gray-700.dark:divide-gray-600{"data-popper-escaped" => "", "data-popper-placement" => "top", "data-popper-reference-hidden" => "", :style => "position: absolute; inset: auto auto 0px 0px; margin: 0px; transform: translate(1293px, 1765px);"}
                %ul.py-1.text-sm.text-gray-700.dark:text-gray-400{"aria-labelledby" => "dropdownLargeButton"}
                  %li
                    %a.block.py-2.px-4.hover:bg-gray-100.dark:hover:bg-gray-600.dark:hover:text-white{:href => current_user}= t(:profile)
                  %li
                    %a.block.py-2.px-4.hover:bg-gray-100.dark:hover:bg-gray-600.dark:hover:text-white{:href => edit_user_path(current_user)}= t(:settings)
                .py-1
                  %a.block.py-2.px-4.text-sm.text-gray-700.hover:bg-gray-100.dark:hover:bg-gray-600.dark:text-gray-400.dark:hover:text-white{:href => logout_path, data: { turbo_method: :delete }}= t(:logout)
          - else
            %li.mr-3
              %a{ :class=>"inline-block body-medium-bold text-dark-300 no-underline hover:text-dark-400 hover:underline py-2 px-4", :href => login_path }= t("login")
