%section#login-page
  .flex.mx-auto.h-screen.bg-primary-500.items-center.justify-center
    .flex.mx-auto.px-8.py-10.rounded-3xl.bg-light-100.drop-shadow{:class => "w-4/5 h-5/6 dark:bg-dark-600"}
      .flex-col.px-5.py-5{:class => "md:basis-1/3"}
        %h2.mb-8.text-dark-400.dark:text-light-300
          = t(:login)
        = form_for(:session, url: login_path) do |f|
          .mb-6
            = f.label t(:email), class: "block mb-2 body-medium-bold text-dark-400 dark:text-light-300"
            = f.email_field :email, palceholder: "email_address", class: 'bg-light-200 dark:bg-dark-500 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500'
          .mb-6
            .block.mb-2
              = f.label t(:password), class: "body-medium-bold text-dark-400 dark:text-light-300"
              = link_to "(#{t(:forgot_password)}?)", new_password_reset_path
            = f.password_field :password, class: 'bg-light-200 dark:bg-dark-500 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-50'
          .flex.items-start.mb-6.items-center
            .flex.items-center.h-5
              = f.check_box :remember_me, type: "checkbox", class: "w-4 h-4 bg-gray-50 rounded border border-gray-300 focus:ring-3 focus:ring-blue-300 dark:bg-gray-700 dark:border-gray-600 dark:focus:ring-blue-600 dark:ring-offset-gray-800"
            .ml-3
              = f.label t(:remember_me), class: "body-medium-regular text-dark-400 dark:text-light-300"

          = f.submit t(:login), class: "text-light-300 bg-primary-600 hover:bg-primary-500 focus:ring-4 focus:outline-none focus:bg-blue-600 heading-h6-bold rounded-lg w-full px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
        .mt-6
          %p #{t(:new_user?)}  #{link_to t(:sign_up_now), signup_path, class: "text-blue-600 hover:underline dark:text-blue-500"}
