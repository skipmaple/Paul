- provide(:title, 'Sign up')
- provide(:button_text, t(:create_my_account))
- content_for(:no_app_layout, true)

%section#signup-page
  .absolute.w-full.min-h-screen.mx-auto.-z-10.bg-dark-600
  .flex.h-screen.w-full.min-h-screen.mx-auto.items-center.justify-center
    .flex.m-10.rounded-3xl.bg-light-100.drop-shadow-lg.filter-none{:class => "max-w-full max-h-full w-4/5 h-5/6 dark:bg-dark-600"}
      .flex-col.px-8.py-8{:class => "md:w-1/3"}
        %h2.mb-8.text-dark-400.dark:text-light-300
          = t(:sign_up)
        .overflow-y-scroll
          = render 'form'
      -#.flex.justify-center.items-center.max-h-64.rounded-lg{:class => "md:basis-2/3"}
      = image_tag('pic_sign_in.jpg', size: "1920x1080", class: 'md:w-2/3 rounded-r-3xl')
