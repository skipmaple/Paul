- provide(:title, 'Sign up')
- provide(:button_text, t(:create_my_account))
- content_for(:no_app_layout, true)

%section#signup-page
  .flex.mx-auto.h-screen.bg-primary-500.items-center.justify-center
    .flex.mx-auto.px-8.py-10.rounded-3xl.bg-light-100.drop-shadow{:class => "w-4/5 h-5/6 dark:bg-dark-600"}
      .flex-col.px-5.py-5{:class => "md:basis-1/3"}
        %h2.mb-8.text-dark-400.dark:text-light-300
          = t(:sign_up)
        = render 'form'
