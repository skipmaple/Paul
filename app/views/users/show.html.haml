- provide(:title, @user.name)
- @bg_blur_wrap = true

.flex.space-x-12.divide-x{ class: 'divide-light-200 dark:divide-dark-400' }

  %aside{:class => "basis-2/3 space-y-8"}
    - if @user.microposts.any?
      %h4{ :class => "text-dark-400 dark:text-light-400" }
        = "#{t(:microposts)} (#{@user.microposts.count})"
      %ol.divide-y{ class: 'divide-light-200 dark:divide-dark-400' }
        = render @microposts
      = paginate @microposts

  %aside{:class => "basis-1/3"}
    .flex.flex-col.items-center.space-y-6{ class: 'ml-[60px] mt-[84px]' }
      %section
        = render 'shared/user_info'
      %section
        = render 'shared/stats'
