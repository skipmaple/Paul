-provide(:title, t(:home))
- if user_signed_in?
  - @bg_blur_wrap = true
  .flex.space-x-12.divide-x{ class: 'divide-light-200 dark:divide-dark-400' }
    .div.space-y-6{:class => "basis-2/3"}
      %h4{ :class => "text-dark-400 dark:text-light-400" }
        = t(:micropost_feed)
      = render 'shared/feed'
    %aside{:class => "basis-1/3"}
      .flex.flex-col.items-center.space-y-6{ class: 'ml-[60px] mt-[84px]' }
        %section
          = render 'shared/user_info'
        %section
          .flex.flex-col.space-y-6
            = render 'shared/stats'
            = render 'shared/more_info'
      -#%section.stats
      -#  = render 'shared/stats'
      -#%section.micropost_form
      -#  = render 'shared/micropost_form'
- else
  - content_for(:no_body_bg, true)
  - content_for(:home_bg, true)

  %section.homepage-not-login
    .container.flex.flex-col.flex-nowrap.px-6.pb-20.mx-auto.space-y-8.items-center.justify-center{class: 'h-[calc(100vh-112px)]'}
      %h1.text-center.max-w-3xl.text-dark-400.dark:text-light-300
        = t(:welcome_title)
      %p.max-w-lg.text-center.text-dark-300.dark:text-light-600
        = t(:welcome_content)
        -# = t(:welcome_content_2)
      %button.rounded-lg.bg-primary-600{ :class => "hover:bg-primary-700" }
        .flex.justify-center.px-8.py-4.md:space-x-2
          = image_tag("icons/start_icon.svg")
          %h5.text-primary-100.text-center
            = link_to t(:sign_up_now), new_user_registration_path
      -# Next page btn
    .flex.flex-col.mb-10.hidden.items-start
      = image_tag("icons/next_circle_btn.svg")
