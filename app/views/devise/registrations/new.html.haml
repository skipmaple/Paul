- provide(:title, 'Sign up')
- provide(:button_text, t(:create_my_account))

%section.container.mx-auto.mb-10
  .flex.overflow-clip.bg-blur-light.rounded-3xl{:class => "max-h-[611px] dark:bg-blur-dark"}
    %section.flex.flex-col.p-8.space-y-3.overflow-y-scroll{:class => "md:w-1/3 h-[611px]"}
      %h4= t(:sign_up)
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        .flex-col.space-y-3
          = render "devise/shared/error_messages", resource: resource
          .field
            = f.label :name, t(:user_name), class: "block mb-2 body-medium-bold text-dark-400 dark:text-light-600"
            = f.text_field :name, autofocus: true, autocomplete: "username", class: 'bg-light-200 dark:bg-dark-500 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500'
          .field
            = f.label :email, t(:email), class: "block mb-2 body-medium-bold text-dark-400 dark:text-light-600"
            = f.email_field :email, autofocus: true, autocomplete: "email", class: 'bg-light-200 dark:bg-dark-500 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500'
          .field
            .flex.space-x-4
              = f.label :password, t(:password), class: "block mb-2 body-medium-bold text-dark-400 dark:text-light-600"
              - if @minimum_password_length
                %em{class: 'text-dark-300 dark:text-light-600'}
                  (#{@minimum_password_length} characters minimum)
            = f.password_field :password, autocomplete: "new-password", class: 'bg-light-200 dark:bg-dark-500 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500'
          .field
            = f.label :password_confirmation, t(:user_password_confirm), class: "block mb-2 body-medium-bold text-dark-400 dark:text-light-600"
            = f.password_field :password_confirmation, autocomplete: "new-password", class: 'bg-light-200 dark:bg-dark-500 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500'
          .actions
            = f.submit yield(:button_text), class: "base-btn w-full rounded-lg"

      = render "devise/shared/links"

    %section#right-bg{ class: "md:w-2/3 bg-devise" }
