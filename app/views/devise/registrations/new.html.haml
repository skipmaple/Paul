- provide(:title, 'Sign up')
- provide(:button_text, t(:create_my_account))

%section#signup-page
  .bg-local.bg-no-repeat.bg-body
    .container.mx-auto.p-12
      .flex.background-clip-content.bg-blur-light.dark:bg-blur-dark{style: "border-radius: 1.5rem !important;"}

        .flex-col.p-8.space-y-8{:class => "md:w-1/3"}
          %h3.mb-8.text-dark-400.dark:text-light-300
            = t(:sign_up)
          .overflow-y-scroll
            = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
              .flex-col.space-y-6
                = render "devise/shared/error_messages", resource: resource
                .field
                  = f.label :name, t(:user_name), class: "block mb-2 body-medium-bold text-dark-400 dark:text-light-600"
                  = f.text_field :name, autofocus: true, autocomplete: "username", class: 'border border-light-300 rounded-lg bg-light-transparent_300 dark:bg-dark-transparent_300 dark:border-dark-300 text-dark-300 focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-dark-300 dark:text-light-600 dark:focus:ring-blue-500 dark:focus:border-blue-500'
                .field
                  = f.label :email, t(:email), class: "block mb-2 body-medium-bold text-dark-400 dark:text-light-600"
                  = f.email_field :email, autofocus: true, autocomplete: "email", class: 'border border-light-300 rounded-lg bg-light-transparent_300 dark:bg-dark-transparent_300 dark:border-dark-300 text-dark-300 focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-dark-300 dark:text-light-600 dark:focus:ring-blue-500 dark:focus:border-blue-500'
                .field
                  .flex.space-x-4
                    = f.label :password, t(:password), class: "block mb-2 body-medium-bold text-dark-400 dark:text-light-600"
                    - if @minimum_password_length
                      %em{class: 'text-dark-300 dark:text-light-600'}
                        (#{@minimum_password_length} characters minimum)
                  = f.password_field :password, autocomplete: "new-password", class: 'border border-light-300 rounded-lg bg-light-transparent_300 dark:bg-dark-transparent_300 dark:border-dark-300 text-dark-300 focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-dark-300 dark:text-light-600 dark:focus:ring-blue-500 dark:focus:border-blue-50'
                .field
                  = f.label :password_confirmation, t(:user_password_confirm), class: "block mb-2 body-medium-bold text-dark-400 dark:text-light-600"
                  = f.password_field :password_confirmation, autocomplete: "new-password", class: 'border border-light-300 rounded bg-light-transparent_300 dark:bg-dark-transparent_300 dark:border-dark-300 text-dark-300 focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-dark-300 dark:text-light-600 dark:focus:ring-blue-500 dark:focus:border-blue-50'
                .actions
                  = f.submit yield(:button_text), class: "text-light-300 bg-primary-600 hover:bg-primary-500 focus:ring-4 focus:outline-none focus:bg-blue-600 heading-h6-bold rounded-lg w-full px-5 py-2.5 text-center dark:bg-blue-600 dark:text-light-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"

            = render "devise/shared/links"

        %section#right-bg{ class: 'md:w-2/3 flex justify-center items-center overflow-hidden' }
          = image_tag('bg/bg_sign_in', class: 'shrink-0 min-w-full min-h-full rounded-r-3xl')
