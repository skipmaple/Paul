- provide(:title, "Login")
-# - content_for(:no_app_layout, true)

%section.container.mx-auto.mb-10
  .flex.items-center.h-unless-header-for-blur.overflow-clip.bg-blur-light.dark:bg-blur-dark.rounded-3xl
    %section.flex.flex-col.h-full.p-8.space-y-8.justify-center.overflow-y-scroll{:class => "md:w-1/3"}
      %h4
        = t(:login)
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .flex-col.space-y-6
          .field
            = f.label t(:email), class: "block mb-2 body-medium-bold text-dark-400 dark:text-light-400"
            = f.email_field :email, autofocus:true, autocomplete: "email", placeholder: "email_address", class: 'bg-light-200 dark:bg-dark-500 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500'
          .field
            .block.mb-2
              = f.label t(:password), class: "body-medium-bold text-dark-400 dark:text-light-400"
              - if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
                = link_to "(#{t(:forgot_password)}?)", new_password_path(resource_name), class: "text-dark-400 dark:text-light-400 hover:underline hover:text-primary-500 dark:hover:text-primary-500"
            = f.password_field :password, autocomplete: "current-password", class: 'bg-light-200 dark:bg-dark-500 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500'
          - if devise_mapping.rememberable?
            .flex.items-start.mb-6.items-center
              .flex.items-center.h-5
                = f.check_box :remember_me, type: "checkbox", class: "w-4 h-4 bg-gray-50 rounded border border-gray-300 focus:ring-3 focus:ring-blue-300 dark:bg-gray-700 dark:border-gray-600 dark:focus:ring-blue-600 dark:ring-offset-gray-800"
              .ml-3
                = f.label t(:remember_me), class: "body-medium-regular text-dark-400 dark:text-light-400"
          = f.submit t(:login), class: "base-btn w-full rounded-lg"

      .sign-with.flex.space-x-3
        = button_to user_github_omniauth_authorize_path, 'data-turbo' => 'false' do
          .base-btn.p-2.bg-white.border.border-light-300.text-dark-400.dark:text-white.dark:bg-transparent.dark:border-dark-400.hover:bg-white.hover:text-dark-400.hover:border-light-400.dark:hover:border-dark-300
            %svg{ :width => "22", :height => "23", :viewbox => "0 0 22 23", :fill => "currentColor", :xmlns => "http://www.w3.org/2000/svg" }
              %path{ :d => "M10.8676 0.875001C4.86324 0.872573 0 5.73339 0 11.7329C0 16.4772 3.04226 20.5101 7.27908 21.9911C7.84965 22.1344 7.76225 21.7289 7.76225 21.4521V19.5704C4.46748 19.9565 4.33394 17.7762 4.113 17.412C3.66625 16.6496 2.61008 16.4553 2.92571 16.0911C3.67596 15.7051 4.44077 16.1883 5.32698 17.4969C5.96797 18.4463 7.21838 18.286 7.85208 18.1282C7.99048 17.5576 8.28669 17.0478 8.69459 16.652C5.28085 16.0402 3.85806 13.9569 3.85806 11.4804C3.85806 10.2786 4.25382 9.17383 5.03077 8.28276C4.53546 6.81384 5.0769 5.55614 5.14974 5.36919C6.5604 5.24293 8.0269 6.37923 8.14101 6.46906C8.94224 6.25297 9.85759 6.13886 10.8822 6.13886C11.9117 6.13886 12.8294 6.25783 13.638 6.47635C13.9123 6.26754 15.272 5.29149 16.5831 5.41046C16.6535 5.59742 17.1828 6.82598 16.7166 8.27548C17.5033 9.16898 17.9039 10.2834 17.9039 11.4877C17.9039 13.9691 16.4714 16.0547 13.048 16.6569C13.3412 16.9452 13.574 17.2891 13.7328 17.6685C13.8917 18.0479 13.9733 18.4551 13.973 18.8663V21.5978C13.9924 21.8163 13.973 22.0324 14.3372 22.0324C18.6372 20.5829 21.7328 16.5209 21.7328 11.7353C21.7328 5.73339 16.8672 0.875001 10.8676 0.875001V0.875001Z", :fill => "currentColor" }
        = button_to user_google_oauth2_omniauth_authorize_path, 'data-turbo' => 'false' do
          .base-btn.p-2.bg-white.border.border-light-300.text-dark-400.dark:text-white.dark:bg-transparent.dark:border-dark-400.hover:bg-white.hover:text-dark-400.hover:border-light-400.dark:hover:border-dark-300
