              %path{"clip-rule" => "evenodd", d: "M4.74782 13.4702C4.53782 12.8402 4.4185 12.1673 4.4185 11.4752C4.4185 10.7832 4.53782 10.1102 4.74782 9.48022V6.75977H1.23986C0.528729 8.17727 0.123047 9.7809 0.123047 11.4752C0.123047 13.1695 0.528729 14.7732 1.23986 16.1907L4.74782 13.4702Z", fill: "#FBBC05", "fill-rule" => "evenodd"}
              %path{"clip-rule" => "evenodd", d: "M10.6234 5.15075C12.165 5.15075 13.5491 5.68052 14.6373 6.72097L17.6489 3.70938C15.8305 2.01506 13.4536 0.974609 10.6234 0.974609C6.51887 0.974609 2.96796 3.32756 1.24023 6.75916L4.74819 9.47961C5.57387 6.99779 7.88864 5.15075 10.6234 5.15075Z", fill: "#EA4335", "fill-rule" => "evenodd"}
      #other-info.flex-col.space-y-4
        -# sign up
        #sign-up
          = link_to new_registration_path(resource_name), class: "text-dark-400 dark:text-light-400 hover:underline hover:text-primary-500 dark:hover:text-primary-500" do
            = "#{t(:new_user?)} (#{t(:sign_up_now)})"
        -#  Didn't receive confirmation instructions?
        #confirmation-email-receive
          - if devise_mapping.confirmable? && controller_name != 'confirmations'
            = link_to t("Didn't receive confirmation instructions?"), new_confirmation_path(resource_name), class: "text-dark-400 dark:text-light-400 hover:underline hover:text-primary-500 dark:hover:text-primary-500"
        -# Didn't receive unlock instructions?
        #unlock-email-receive
          - if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
            = link_to t("Didn't receive unlock instructions?"), new_unlock_path(resource_name), class: "text-dark-400 dark:text-light-400 hover:underline hover:text-primary-500 dark:hover:text-primary-500"

    %section#right-bg.h-full{ class: "md:w-2/3 bg-devise" }
