body {

  background: linear-gradient(157.42deg, rgba(240, 246, 255, 0.2) 4.94%, rgba(240, 246, 255, 0) 68.33%) no-repeat;
  //  -webkit-background-size: 100vw 100vh,100vw 100vh,57.6vw 87.8vh,47.14vw 79.66vh;
  //  -moz-background-size: 100vw 100vh,100vw 100vh,57.6vw 87.8vh,47.14vw 79.66vh;
  //  -o-background-size: 100vw 100vh,100vw 100vh,57.6vw 87.8vh,47.14vw 79.66vh;
  background-size: 100vw 100vh, 100vw 100vh;

}

.bg-strip-patterns{
  background-image: url(<%= asset_path 'bg/bg_strip_patterns.svg' %>);
  background-size: 57.6vw 87.8vh;
  background-position: top 0 left 0;
  background-repeat: no-repeat;
  position: absolute;
  margin-top: 0 !important;
  padding-top: 0 !important;
  top: 0;
  left: 0;
}

.bg-3d-shapes{
  background-image: url(<%= asset_path 'bg/bg_3d_shapes.svg' %>);
  background-size:  47.14vw 79.66vh;
  background-position: bottom 54px right 32px;
  background-repeat: no-repeat;
  position: absolute;
  right: 0;
  bottom: 0;
}

.dark .dark\:bg-3d-shapes-dark{
  background-image: url(<%= asset_path 'bg/bg_3d_shapes_dark.svg' %>);
  background-size:  47.14vw 79.66vh;
  background-position: bottom 54px right 32px;
  background-repeat: no-repeat;
  position: absolute;
  right: 0;
  bottom: 0;
}

