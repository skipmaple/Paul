/*
1. Remove the margin in all browsers.
2. Inherit line-height from `html` so users can set them as a class directly on the `html` element.
*/
body {
  margin: 0;
  /* 1 */
  line-height: inherit;
  /* 2 */
}

.bg-body{
  background-image: url(<%= asset_path 'bg/bg_body' %>);
  background-size: 100% auto;
  background-position: left top 80px;
}

.bg-sign-in{
  background-image: url(<%= asset_path 'bg/bg_sign_in' %>);
}

.bg-not-login{
  background: linear-gradient(157.42deg, rgba(240, 246, 255, 0.2) 4.94%, rgba(240, 246, 255, 0) 68.33%) no-repeat;
  background-size: 100vw 100vh, 100vw 100vh;
}

.bg-strip-patterns{
  background-image: url(<%= asset_path 'bg/bg_strip_patterns.svg' %>);
  background-size: 57.6vw 87.8vh;
  background-position: top 0 left 0;
  background-repeat: no-repeat;
  position: absolute;
  margin-top: 0 !important;
  padding-top: 0 !important;
  top: 0;
  left: 0;
}

.bg-3d-shapes{
  background-image: url(<%= asset_path 'bg/bg_3d_shapes.svg' %>);
  background-size:  47.14vw 79.66vh;
  background-position: bottom 54px right 32px;
  background-repeat: no-repeat;
  position: absolute;
  right: 0;
  bottom: 0;
}

.dark .dark\:bg-3d-shapes-dark{
  background-image: url(<%= asset_path 'bg/bg_3d_shapes_dark.svg' %>);
  background-size:  47.14vw 79.66vh;
  background-position: bottom 54px right 32px;
  background-repeat: no-repeat;
  position: absolute;
  right: 0;
  bottom: 0;
}

.bg-blur-light{
  background: rgba(242, 243, 246, 0.4);
  /* Color/Light/200 */

  border: 1px solid #F2F3F6;
  backdrop-filter: blur(24px);
  /* Note: backdrop-filter has minimal browser support */

  border-radius: 5px;
}

.dark .dark\:bg-blur-dark{
  background: rgba(122, 122, 138, 0.2);
  /* Color/Dark/300 */

  border: 1px solid #545569;
  backdrop-filter: blur(24px);
  /* Note: backdrop-filter has minimal browser support */

  border-radius: 5px;
}

